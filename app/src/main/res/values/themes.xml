<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Light Mode -->
    <style name="Base.Theme.FitLife" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimaryContainer">@color/primary_variant</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>
        <item name="colorOnSecondaryContainer">@color/secondary_variant</item>

        <!-- Background colors - Cloud Dancer -->
        <item name="android:colorBackground">@color/cloud_dancer</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Ripple effect -->
        <item name="colorControlHighlight">@color/primary_light</item>

        <!-- Card background for theme -->
        <item name="fitlife_cardBackground">@color/card_background</item>
        <item name="fitlife_cardStroke">@color/card_stroke</item>

        <!-- Bottom navigation colors -->
        <item name="fitlife_bottomNavBackground">@color/surface</item>
    </style>

    <style name="Theme.FitLife" parent="Base.Theme.FitLife" />

    <!-- Splash Screen Theme -->
    <style name="Theme.FitLife.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/cloud_dancer</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_fitness_splash</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/primary</item>
        <item name="postSplashScreenTheme">@style/Theme.FitLife</item>
    </style>

    <!-- Toolbar Theme -->
    <style name="Theme.FitLife.Toolbar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="colorPrimary">@color/primary</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.FitLife.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">?attr/fitlife_cardBackground</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Outlined Card Style -->
    <style name="Widget.FitLife.CardView.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">?attr/fitlife_cardBackground</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">?attr/fitlife_cardStroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Primary Button Style -->
    <style name="Widget.FitLife.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="Widget.FitLife.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Text Button Style -->
    <style name="Widget.FitLife.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Floating Action Button Style -->
    <style name="Widget.FitLife.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/accent</item>
        <item name="tint">@color/white</item>
    </style>

    <!-- Text Input Layout Style -->
    <style name="Widget.FitLife.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.FitLife.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">?attr/fitlife_bottomNavBackground</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.FitLife.BottomNavigation.ActiveIndicator</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="Widget.FitLife.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorPrimaryContainer</item>
    </style>

    <!-- Checkbox Style -->
    <style name="Widget.FitLife.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">?attr/colorPrimary</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.FitLife.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="chipStrokeColor">?attr/colorPrimary</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="checkedIconVisible">true</item>
    </style>
</resources>
